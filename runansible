#!/bin/bash
if [ -f dxs-vagrant.yml ]
 then
 PLAYBOOK="dxs-vagrant.yml"
 INVENTORY="ansible_hosts"
 echo "Running local playbooks! "
 else
 if [ -f /var/lib/dxs/dxs-vagrant.yml ]
 then
 PLAYBOOK="/var/lib/dxs/dxs-vagrant.yml"
 INVENTORY="/var/lib/dxs/ansible_hosts"
 echo "Running rpm provided playbooks ! "
fi
fi
if [ "$PLAYBOOK" == "" ]
	then
	echo "rpm is not installed, and local playbook wasn't found!"
	exit
	fi
ansible-playbook -i $INVENTORY $PLAYBOOK --connection=local 
